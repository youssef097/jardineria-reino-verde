<section class="container m-auto " id="nuestrosServicios">
    <h2 class="mt-20 mb-8 ml-3 font-bold text-2xl">Nuestros Servicios</h2>
    <div
        class="grid px-8 md:p-0  grid-flow-col grid-cols-1 gap-y-4 grid-rows-6 md:grid-cols-2 md:grid-rows-3 lg:grid-cols-3 lg:grid-rows-2 md:gap-x-16 md:gap-8 ">

        <!-- Recorrera tantas posiciones como objetos haya en datosServicios -->
        <% datosServicios.forEach((datos,i) => { %>

            <div
                class="border rounded-md hover:scale-110 border-gray-400 hover:shadow-2xl hover:border-green-600 shadow-md cursor-pointer">
                <div class="w-full h-80 rounded-t-md bg-cover " style="background-image:url(<%= datos.img %>);">

                </div>
                <div class="pb-5">
                    <h3 class="text-center my-3 text-lg font-semibold"><%= datos.nombre %></h3>
                    <div class="text-center p-2">
                        <a href="/servicios/<%= datos.id %>"
                            class="p-2 rounded-md text-center text-green-600 border-2 border-green-600 hover:text-white hover:bg-green-600">
                            Saber más</a>
                    </div>
                </div>
            </div>

            <% }); %>
    </div>

</section>



